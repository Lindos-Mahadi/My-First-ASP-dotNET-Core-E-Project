@model Online_Shopping_Store.Models.Products
@{
    ViewData["Title"] = "Create";
}

<br />
<h2>Add New Product</h2>
<br />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="rounded border p-4">
        <div asp-validation-summary="ModelOnly"></div>
        <h3> @ViewBag.messahge</h3>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Price" class="form-control" />
            </div>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image"></label>
            </div>
            <div class="col-6">
                <input asp-for="Image" class="form-control" type="file" />
            </div>
            <span asp-validation-for="Image" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductColor"></label>
            </div>
            <div class="col-6">
                <input asp-for="ProductColor" class="form-control" />
            </div>
            <span asp-validation-for="ProductColor" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypeId"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="ProductTypeId" class="form-control" />*@
                <select asp-for="ProductTypeId" asp-items="ViewBag.ProductTypeId" class="form-control" ></select>
            </div>
            <span asp-validation-for="ProductTypeId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="SpecialTagId"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="SpecialTagId" class="form-control" />*@
                <select asp-for="SpecialTagId" asp-items="ViewBag.TagId" class="form-control"></select>
            </div>
            <span asp-validation-for="SpecialTagId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsAbailable"></label>
            </div>
            <div class="col-6">
                <input asp-for="IsAbailable" class="" type="checkbox" />
            </div>
            <span asp-validation-for="IsAbailable" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
