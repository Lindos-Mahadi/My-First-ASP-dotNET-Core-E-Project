@{
    ViewData["Title"] = "Create";
}

<h2>Add New User</h2>

<div class="">
    <form asp-action="Create" method="post" id="role-form">

        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </div>


        <div class="p-4 rounded border">
        <div class="form-group row">
            <div class="col-2"></div>
            <div class="col-6">
                <h3>@ViewBag.msg</h3>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label>Role Name</label>
            </div>
            <div class="col-6">
                <input id="name" name="name" class="form-control" placeholder="Role Name" value="@ViewBag.name" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                @*<button type="submit" class="btn btn-primary">Save</button>*@

            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-primary" value="Submit" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>

        </div>
</div>
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#role-form").validate({
                rules: {
                    name: {
                        required: true
                    },
                    FirstName: {
                        required: true
                    }
                }
            });

        });
    </script>
}
