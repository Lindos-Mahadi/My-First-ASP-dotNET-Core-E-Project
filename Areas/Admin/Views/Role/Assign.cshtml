@model Online_Shopping_Store.Areas.Admin.Models.RoleUser
@{
    ViewData["Title"] = "Assign";
}

<br />
<h2>Assign Role</h2>
<br />
<form asp-action="Assign" method="post" enctype="multipart/form-data">
    <div class="rounded border p-4">
        <div asp-validation-summary="ModelOnly"></div>
        <h3> @ViewBag.msg</h3>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserId"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="SpecialTagId" class="form-control" />*@
                <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control"></select>
            </div>
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RoleId"></label>
            </div>
            <div class="col-6">
                @*<input asp-for="SpecialTagId" class="form-control" />*@
                <select asp-for="RoleId" asp-items="ViewBag.RoleId" class="form-control"></select>
            </div>
            <span asp-validation-for="RoleId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Assign" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}
