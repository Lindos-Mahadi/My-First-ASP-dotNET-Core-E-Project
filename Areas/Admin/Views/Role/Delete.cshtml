@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Role</h2>

<div class="">
    <form asp-action="Delete" method="post" id="role-form">

        <div class="p-4 rounded border">
            <div class="form-group row">
                <div class="col-6">
                    <h4 class="text-danger">Do you want to Delete this Role ??? </h4>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label>Role Name</label>
                </div>
                <div class="col-6">
                    <input id="name" name="name" class="form-control" readonly="readonly" placeholder="Role Name" value="@ViewBag.name" />
                </div>
            </div>
            <div class="form-group">
                @*<button type="submit" class="btn btn-primary">Save</button>*@

                <input type="submit" class="btn btn-primary" value="Delete" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </div>
    </form>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#role-form").validate({
                rules: {
                    name: {
                        required: true
                    },
                    FirstName: {
                        required: true
                    }
                }
            });

        });
    </script>
}
