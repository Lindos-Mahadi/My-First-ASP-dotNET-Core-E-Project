@model Online_Shopping_Store.Models.ProductTypes

@{
    ViewData["Title"] = "Details";
}

<br />
<h2>Details Product Type</h2>
@* <form asp-action="Details" method="post"> *@
<div class="rounded border p-4">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row mx-auto">
        <div class="col-2">
            <label asp-for="ProductType"></label>
        </div>
        <div class="col-6">
            <input asp-for="ProductType" readonly="readonly" class="form-control" />
        </div>
        <span asp-validation-for="ProductType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
        @*<input type="submit" class="btn btn-success" value="Back to List" />*@
    </div>
</div>
@*</form>*@

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}